<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.blogspot.upsolving.wallbeauty" >

    <uses-permission android:name="android.permission.INTERNET"/>



    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <activity android:name=".explore.ExploreActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".SettingsActivity"
            android:parentActivityName=".explore.ExploreActivity"/>

        <activity android:name=".search.SearchActivity"
            android:parentActivityName=".explore.ExploreActivity"/>

        <activity android:name=".ErrorReportActivity"/>

        <activity android:name=".history.HistoryActivity"
            android:parentActivityName=".explore.ExploreActivity"/>

        <activity android:name=".favourites.FavouritesActivity"
            android:parentActivityName=".explore.ExploreActivity"/>


        <activity android:name=".PhotoDetailActivity"
            android:parentActivityName=".explore.ExploreActivity"/>
    </application>

</manifest>
